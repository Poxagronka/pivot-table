/**
 * Create custom menu in Google Sheets interface
 */
function onOpen() {
  const ui = SpreadsheetApp.getUi();
  ui.createMenu('Campaign Report')
    .addSubMenu(ui.createMenu('ğŸ“Š Tricky Reports')
      .addItem('ğŸ“… Last 30 days', 'generateTrickyReport30')
      .addItem('ğŸ“… Last 60 days', 'generateTrickyReport60')
      .addItem('ğŸ“… Last 90 days', 'generateTrickyReport90')
      .addItem('ğŸ“… Custom days', 'showTrickyDaysDialog')
      .addItem('ğŸ“… Date range', 'showTrickyDateRangeDialog')
      .addSeparator()
      .addItem('âš™ï¸ Target eROAS Settings', 'showTrickyTargetSettings')
    )
    .addSubMenu(ui.createMenu('ğŸ”¥ Moloco Reports')
      .addItem('ğŸ“… Last 30 days', 'generateMolocoReport30')
      .addItem('ğŸ“… Last 60 days', 'generateMolocoReport60')
      .addItem('ğŸ“… Last 90 days', 'generateMolocoReport90')
      .addItem('ğŸ“… Custom days', 'showMolocoDaysDialog')
      .addItem('ğŸ“… Date range', 'showMolocoDateRangeDialog')
      .addSeparator()
      .addItem('âš™ï¸ Target eROAS Settings', 'showMolocoTargetSettings')
    )
    .addSubMenu(ui.createMenu('ğŸ“ˆ Regular Reports')
      .addItem('ğŸ“… Last 30 days', 'generateRegularReport30')
      .addItem('ğŸ“… Last 60 days', 'generateRegularReport60')
      .addItem('ğŸ“… Last 90 days', 'generateRegularReport90')
      .addItem('ğŸ“… Custom days', 'showRegularDaysDialog')
      .addItem('ğŸ“… Date range', 'showRegularDateRangeDialog')
      .addSeparator()
      .addItem('âš™ï¸ Target eROAS Settings', 'showRegularTargetSettings')
    )
    .addSeparator()
    .addSubMenu(ui.createMenu('âš™ï¸ Settings')
      .addItem('ğŸ¯ Project Overview', 'showProjectSettings')
      .addSeparator()
      .addSubMenu(ui.createMenu('ğŸ’¾ Comment Cache')
        .addItem('ğŸ’¬ Save Tricky Comments', 'saveTrickyCommentsToCache')
        .addItem('ğŸ’¬ Save Moloco Comments', 'saveMolocoCommentsToCache')
        .addItem('ğŸ’¬ Save Regular Comments', 'saveRegularCommentsToCache')
        .addSeparator()
        .addItem('ğŸ’¬ Save All Comments', 'saveAllCommentsToCache')
      )
      .addSeparator()
      .addSubMenu(ui.createMenu('ğŸ”„ Auto Updates')
        .addItem('â° Auto Cache Settings', 'showAutoCacheSettings')
        .addItem('ğŸ“… Auto Update Settings', 'showAutoUpdateSettings')
        .addSeparator()
        .addItem('ğŸ“Š View Status', 'showAutomationStatus')
      )
      .addSeparator()
      .addItem('ğŸ—‘ï¸ Clear Data', 'showClearDataDialog')
    )
    .addSubMenu(ui.createMenu('ğŸ”§ Debug')
      .addItem('ğŸ› Debug Tricky', 'debugTrickyReportGeneration')
      .addItem('ğŸ› Debug Moloco', 'debugMolocoReportGeneration')
      .addItem('ğŸ› Debug Regular', 'debugRegularReportGeneration')
      .addSeparator()
      .addItem('ğŸ” Quick API Check', 'showQuickAPICheckDialog')
    )
    .addToUi();
}
