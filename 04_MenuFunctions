        .addItem('‚ñ∂Ô∏è Start auto cache (60 min)', 'startTrickyAutoCache')
        .addItem('‚èπÔ∏è Stop auto cache', 'stopTrickyAutoCache')
        .addItem('üìä Check status', 'checkTrickyAutoCacheStatus')
        .addSeparator()
