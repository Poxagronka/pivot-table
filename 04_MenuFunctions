        .addItem('‚èπÔ∏è Stop auto cache', 'stopMolocoAutoCache')
        .addItem('üìä Check status', 'checkMolocoAutoCacheStatus')
        .addSeparator()
        .addItem('üîÑ Force cache now', 'forceMolocoCache')
        .addSeparator()
        .addSubMenu(ui.createMenu('üß™ Test Groups')
          .addItem('üì• Test collapse groups', 'testMolocoCollapseGroups')
          .addItem('üì§ Test expand groups', 'testMolocoExpandGroups')
        )
        .addSeparator()
