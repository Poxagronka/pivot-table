/**
 * Show project settings dialog
 */
function showProjectSettings() {
  const ui = SpreadsheetApp.getUi();
  
  const trickyConfig = PROJECTS.TRICKY;
  const molocoConfig = PROJECTS.MOLOCO;
  const regularConfig = PROJECTS.REGULAR;
  
  const message = 
    'üìä TRICKY PROJECT:\n' +
    `‚Ä¢ Sheet: ${trickyConfig.SHEET_NAME}\n` +
    `‚Ä¢ API URL: ${trickyConfig.API_URL}\n` +
    `‚Ä¢ Target eROAS: ${trickyConfig.TARGET_EROAS}%\n` +
    `‚Ä¢ Token: ${trickyConfig.BEARER_TOKEN ? 'Configured ‚úì' : 'Missing ‚úó'}\n` +
    `‚Ä¢ Campaign Search: ${trickyConfig.API_CONFIG.FILTERS.ATTRIBUTION_CAMPAIGN_SEARCH}\n` +
    `‚Ä¢ Network HID: ${trickyConfig.API_CONFIG.FILTERS.ATTRIBUTION_NETWORK_HID[0]}\n\n` +
    
    'üî• MOLOCO PROJECT:\n' +
    `‚Ä¢ Sheet: ${molocoConfig.SHEET_NAME}\n` +
    `‚Ä¢ API URL: ${molocoConfig.API_URL}\n` +
    `‚Ä¢ Target eROAS: ${molocoConfig.TARGET_EROAS}%\n` +
    `‚Ä¢ Token: ${molocoConfig.BEARER_TOKEN ? 'Configured ‚úì' : 'Missing ‚úó'}\n` +
    `‚Ä¢ Campaign Search: NO FILTER (takes all campaigns)\n` +
    `‚Ä¢ Network HID: ${molocoConfig.API_CONFIG.FILTERS.ATTRIBUTION_NETWORK_HID[0]}\n\n` +
    
    'üìà REGULAR PROJECT:\n' +
    `‚Ä¢ Sheet: ${regularConfig.SHEET_NAME}\n` +
    `‚Ä¢ API URL: ${regularConfig.API_URL}\n` +
    `‚Ä¢ Target eROAS: ${regularConfig.TARGET_EROAS}%\n` +
    `‚Ä¢ Token: ${regularConfig.BEARER_TOKEN ? 'Configured ‚úì' : 'Missing ‚úó'}\n` +
    `‚Ä¢ Campaign Search: NO FILTER (takes all campaigns)\n` +
    `‚Ä¢ Network HID: ${regularConfig.API_CONFIG.FILTERS.ATTRIBUTION_NETWORK_HID[0]}\n\n` +
    
    '‚úÖ All projects are fully configured and ready to use!\n\n' +
    'üîÑ Key differences:\n' +
    `‚Ä¢ Tricky: Network ${trickyConfig.API_CONFIG.FILTERS.ATTRIBUTION_NETWORK_HID[0]}, filtered campaigns "/tricky/i"\n` +
    `‚Ä¢ Moloco: Network ${molocoConfig.API_CONFIG.FILTERS.ATTRIBUTION_NETWORK_HID[0]}, ALL campaigns (no filter)\n` +
    `‚Ä¢ Regular: Network ${regularConfig.API_CONFIG.FILTERS.ATTRIBUTION_NETWORK_HID[0]} (same as Tricky), ALL campaigns (no filter)\n` +
    '‚Ä¢ Each project has separate comment cache\n' +
    '‚Ä¢ Independent data sheets and settings\n' +
    '‚Ä¢ All projects use the same bearer token\n\n' +
    'üéØ Source App Display:\n' +
    '‚Ä¢ Tricky: Extracts app names from campaign structure\n' +
    '‚Ä¢ Moloco: Shows full campaign names (APD_Word_Maker_iOS_...)\n' +
    '‚Ä¢ Regular: Shows extracted app names (same logic as Tricky)';
  
  ui.alert('Project Settings', message, ui.ButtonSet.OK);
}

