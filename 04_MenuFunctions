/**
 * Create custom menu in Google Sheets interface
 */
function onOpen() {
  const ui = SpreadsheetApp.getUi();
  ui.createMenu('Campaign Report')
    .addSubMenu(ui.createMenu('üìä Tricky Reports')
      .addItem('üìÖ Last 30 days', 'generateTrickyReport30')
