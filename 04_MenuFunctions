        .addSeparator()
        .addSubMenu(ui.createMenu('üß™ Test Groups')
          .addItem('üì• Test collapse groups', 'testTrickyCollapseGroups')
          .addItem('üì§ Test expand groups', 'testTrickyExpandGroups')
